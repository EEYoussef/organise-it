<h1>Edit Profile</h1>
<%# if any erros happend while uploading the form %>
<%user = @user%>
<%= form_with model: user do |form| %>
<% if user.errors.any?%>
    <div id="error_explanation">
    <h2> <%=pluralize(user.errors.count,"error")%> doesnt allow user to be saved: </h2>
    <ul>
        <% user.errors.full_messages.each do |message|%>
            <li> <%= message %> </li>
        <%end%>
    </ul>
    </div>
    <%end%>
    <%# the form with first and last name editing and the bio  %>
<div class = "form-group">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, class: "form-control" %>
</div>
<div class = "form-group">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, class: "form-control" %>
</div>
<div class = "form-group">
  <%= form.label :bio %>
  <%= form.text_area :bio, class: "form-control" %>
</div>
<div class = "actions">
  <%= form.submit class: "btn btn-primary" %>
  <%= link_to "Cancel",user_path , class: "btn-btn-secondary" %>
</div>
  
<% end %>