
<h3> My Projects</h3>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <%@projects.each do |project|%>
          <%if project.user_id == current_user.id%>
            <div class="col">
              <div class="card shadow-sm">
              <%if project.pictures.attached?%>
                <%=image_tag project.pictures[0], alt: project.title, class:"bd-placeholder-img card-img-top",width:"100%", height:"225"%>
              <%else%>
                <%=image_tag "default_pic.jpg", alt: "default", class:"bd-placeholder-img card-img-top",width:"100%", height:"225"%>
              <%end%>
                <div class="card-body">
                <h5 class="card-title"><%=project.title%></h5>
                  <p class="card-text"><%=project.description%></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%=link_to "View", project_path(project.id), class: "btn btn-sm btn-outline-secondary"%>
                      
                    </div>
                    <small class="text-muted"><%=format_price(project.price)%></small>
                  </div>
                </div>
              </div>
            </div>
            <%end%>
           
          <%end%>
       
       
      </div>
    </div>
  </div>

